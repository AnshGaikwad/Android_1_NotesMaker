<PreferenceScreen xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory app:title="Profile">
        <EditTextPreference
            app:key="Username"
            app:title="Username"/>

    </PreferenceCategory>

    <PreferenceCategory app:title="Sync">

        <SwitchPreferenceCompat
            app:key="CloudUpload"
            app:title="Upload to Cloud" />

        <ListPreference
            app:entries="@array/reply_entries"
            app:entryValues="@array/reply_values"
            app:key="Storage"
            app:title= "Storage"
            app:useSimpleSummaryProvider="true" />

    </PreferenceCategory>

</PreferenceScreen>